<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= title %>
  </title>
  <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon" />
  <link rel="stylesheet" href="/css/animate.css" />
  <link rel="stylesheet" href="/css/tailwind.css" />
  <script src="/js/wow.min.js"></script>
  <script src="/js/main.js"></script>
  <script>
    new WOW().init();
  </script>
</head>

<body>
  <%- include('partials/navbar') %>

    <section class="pt-[150px] pb-[120px] dark:bg-dark">
      <div class="container px-4 mx-auto">
        <div class="wow fadeInUp" data-wow-delay=".2s">
          <div class="-mx-4 flex flex-wrap">
            <div class="w-full px-4">
              <div class="mx-auto mb-12 max-w-[510px] text-center lg:mb-20">
                <h2 class="mb-3 text-3xl font-bold leading-[1.2] text-dark dark:text-white sm:text-4xl md:text-[40px]">
                  Admin Dashboard
                </h2>
              </div>
            </div>
          </div>

          <!-- Admin Features Grid -->
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Users Management Card -->
            <a href="/admin/users"
              class="block p-6 bg-white dark:bg-dark-2 rounded-lg shadow-md hover:shadow-lg transition-all duration-300">
              <div class="flex items-center space-x-4">
                <div class="p-3 rounded-lg">
                  <svg class="w-8 h-8 text-gray-700 dark:text-gray-300" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-dark dark:text-white">Users Management</h3>
                  <p class="mt-2 text-gray-600 dark:text-gray-400">Manage user accounts, roles, and permissions</p>
                </div>
              </div>
            </a>

            <!-- Approve Blog Card -->
            <a href="/admin/blogs"
              class="block p-6 bg-white dark:bg-dark-2 rounded-lg shadow-md hover:shadow-lg transition-all duration-300">
              <div class="flex items-center space-x-4">
                <div class="p-3 rounded-lg">
                  <svg class="w-8 h-8 text-gray-700 dark:text-gray-300" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-dark dark:text-white">Approve Blogs</h3>
                  <p class="mt-2 text-gray-600 dark:text-gray-400">Approve or reject pending blog posts</p>
                </div>
              </div>
            </a>

            <!-- Categories & Tags Management Card -->
            <a href="/admin/categories-tags"
              class="block p-6 bg-white dark:bg-dark-2 rounded-lg shadow-md hover:shadow-lg transition-all duration-300">
              <div class="flex items-center space-x-4">
                <div class="p-3 rounded-lg">
                  <svg class="w-8 h-8 text-gray-700 dark:text-gray-300" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A2 2 0 013 12V7a4 4 0 014-4z" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-dark dark:text-white">Categories & Tags</h3>
                  <p class="mt-2 text-gray-600 dark:text-gray-400">Manage post categories and tags</p>
                </div>
              </div>
            </a>

            <!-- Analytics Card -->
            <a href="/admin/analytics"
              class="block p-6 bg-white dark:bg-dark-2 rounded-lg shadow-md hover:shadow-lg transition-all duration-300">
              <div class="flex items-center space-x-4">
                <div class="p-3 rounded-lg">
                  <svg class="w-8 h-10 text-gray-700 dark:text-gray-300" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path d="M11.709,7.438H8.292c-0.234,0-0.427,0.192-0.427,0.427v8.542c0,0.234,0.192,0.427,0.427,0.427h3.417c0.233,0,0.426-0.192,0.426-0.427V7.865C12.135,7.63,11.942,7.438,11.709,7.438 M11.282,15.979H8.719V8.292h2.563V15.979zM6.156,11.709H2.74c-0.235,0-0.427,0.191-0.427,0.426v4.271c0,0.234,0.192,0.427,0.427,0.427h3.417c0.235,0,0.427-0.192,0.427-0.427v-4.271C6.583,11.9,6.391,11.709,6.156,11.709 M5.729,15.979H3.167v-3.416h2.562V15.979zM17.261,3.167h-3.417c-0.235,0-0.427,0.192-0.427,0.427v12.812c0,0.234,0.191,0.427,0.427,0.427h3.417c0.234,0,0.427-0.192,0.427-0.427V3.594C17.688,3.359,17.495,3.167,17.261,3.167 M16.833,15.979h-2.562V4.021h2.562V15.979z"></path>
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-dark dark:text-white">Analytics</h3>
                  <p class="mt-2 text-gray-600 dark:text-gray-400">Web Stats with interactive Charts</p>
                </div>
              </div>
            </a>

            <!-- Premium Orders Management Card -->
            <a href="/admin/orders"
              class="block p-6 bg-white dark:bg-dark-2 rounded-lg shadow-md hover:shadow-lg transition-all duration-300">
              <div class="flex items-center space-x-4">
                <div class="p-3 rounded-lg">
                  <svg class="w-8 h-8 text-gray-700 dark:text-gray-300" fill="none" stroke="currentColor"
                    viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
                  </svg>
                </div>
                <div>
                  <h3 class="text-xl font-semibold text-dark dark:text-white">Premium Orders</h3>
                  <p class="mt-2 text-gray-600 dark:text-gray-400">Manage premium subscriptions</p>
                </div>
              </div>
            </a>
          </div>

        </div>
      </div>
    </section>

    <!-- ====== Back To Top Start -->
    <a href="javascript:void(0)"
      class="back-to-top fixed bottom-8 right-8 left-auto z-[999] hidden h-10 w-10 items-center justify-center rounded-md bg-primary text-white shadow-md transition duration-300 ease-in-out hover:bg-dark">
      <span class="mt-[6px] h-3 w-3 rotate-45 border-t border-l border-white"></span>
    </a>
    <!-- ====== Back To Top End -->

    <%- include('partials/footer') %>
      <script src="/js/main.js"></script>
</body>

</html>