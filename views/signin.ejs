  <script>
    $(document).ready(function() {
      $('#signinForm').on('submit', function(event) {
        event.preventDefault(); // Prevent the default form submission
  
        $.ajax({
          url: '/signin',
          method: 'POST',
          data: $(this).serialize(),
          success: function(response) {
            // Handle success response
            Swal.fire({
              icon: 'success',
              title: 'Success',
              text: response.success_msg,
              customClass: {
                popup: 'bg-[#F4F7FF] dark:bg-gray-800 text-[#333] dark:text-gray-200',
                title: 'text-[#1a202c] dark:text-gray-100',
                confirmButton: 'bg-[#1a202c] text-white dark:bg-gray-700',
                cancelButton: 'bg-[#e53e3e] text-white dark:bg-green-600'
              }
            }).then(() => {
              window.location.href = '/'; // Redirect to the homepage or another page
            });
          },
          error: function(xhr) {
            const response = xhr.responseJSON;

            // Kiểm tra nếu tài khoản bị banned
            if (response.isBanned) {
              Swal.fire({
                icon: 'error',
                title: 'Account Banned',
                html: `${response.errors[0].msg}<br><br>
                      <span class="text-sm">If you believe this is a mistake, please contact our admin at:<br>
                      <a href="mailto:${response.adminEmail}" class="text-blue-600 hover:underline">${response.adminEmail}</a></span>`,
                confirmButtonText: 'OK',
                customClass: {
                  popup: 'bg-[#F4F7FF] dark:bg-gray-800 text-[#333] dark:text-gray-200',
                  title: 'text-[#1a202c] dark:text-gray-100',
                  confirmButton: 'bg-[#1a202c] text-white dark:bg-gray-700'
                }
              }).then(() => {
                window.location.href = '/logout';
              });
            } else if (response.errors) {
              Swal.fire({
                icon: 'error',
                title: 'Error',
                text: response.errors[0].msg,
                customClass: {
                  popup: 'bg-[#F4F7FF] dark:bg-gray-800 text-[#333] dark:text-gray-200',
                  title: 'text-[#1a202c] dark:text-gray-100',
                  confirmButton: 'bg-[#1a202c] text-white dark:bg-gray-700'
                }
              });
            }
          }
        });
      });
    });
