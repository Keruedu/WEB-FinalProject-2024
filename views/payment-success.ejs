<!DOCTYPE html>
<html lang="en" class="dark">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Payment Success | Play Tailwind</title>
  <link rel="shortcut icon" href="/images/favicon.png" type="image/x-icon" />
  <link rel="stylesheet" href="/css/animate.css" />
  <link rel="stylesheet" href="/css/tailwind.css" />

  <!-- ==== WOW JS ==== -->
  <script src="/js/wow.min.js"></script>
  <script>
    new WOW().init();
  </script>
</head>

<body class="bg-white dark:bg-dark text-dark dark:text-white">
  <!-- ====== Navbar Section Start -->
  <%- include('partials/navbar') %>
  <!-- ====== Navbar Section End -->

  <!-- ====== Banner Section Start -->
  <div class="relative z-10 overflow-hidden pt-[120px] pb-[60px] md:pt-[130px] lg:pt-[160px] dark:bg-dark">
    <div class="absolute bottom-0 left-0 w-full h-px bg-gradient-to-r from-stroke/0 via-stroke dark:via-dark-3 to-stroke/0"></div>
    <div class="container">
      <div class="flex flex-wrap items-center -mx-4">
        <div class="w-full px-4">
          <div class="text-center">
            <h1 class="mb-4 text-3xl font-bold text-dark dark:text-white sm:text-4xl md:text-[40px] md:leading-[1.2] wow fadeInUp" data-wow-delay=".1s">
              Payment Success
            </h1>
            <p class="mb-5 text-base text-body-color dark:text-dark-6 wow fadeInUp" data-wow-delay=".2s">
              Your payment was successful. Thank you for your purchase!
            </p>

            <ul class="flex items-center justify-center gap-[10px] wow fadeInUp" data-wow-delay=".3s">
              <li>
                <a href="../index" class="flex items-center gap-[10px] text-base font-medium text-dark dark:text-white">
                  Home
                </a>
              </li>
              <li>
                <a href="javascript:void(0)" class="flex items-center gap-[10px] text-base font-medium text-body-color">
                  <span class="text-body-color dark:text-dark-6"> / </span>
                  Payment Success
                </a>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- ====== Banner Section End -->

  <!-- ====== Checkout Section Start -->
  <section id="pricing" class="relative z-20 overflow-hidden bg-white dark:bg-dark pt-20 pb-12 lg:pt-[120px] lg:pb-[90px]">
    <div class="container">
      <div class="text-center">
        <div class="text-4xl font-bold text-primary dark:text-primary-light wow fadeInUp" data-wow-delay=".4s">Payment Successful!</div>
        <p class="mt-4 text-lg text-body-color dark:text-dark-6 wow fadeInUp" data-wow-delay=".5s">
          Thank you for your purchase. Your transaction has been completed successfully.
        </p>
        <a href="/my-orders" class="mt-8 inline-block px-8 py-3 text-base font-medium text-white bg-primary rounded-md hover:bg-primary-dark transition duration-300 ease-in-out wow fadeInUp" data-wow-delay=".6s">
          View My Orders
        </a>
      </div>
    </div>
  </section>
  <!-- ====== Checkout Section End -->

  <!-- ====== Footer Section Start -->
  <%- include('partials/footer') %>
  <!-- ====== Footer Section End -->

  <!-- ====== Back To Top Start -->
  <a href="javascript:void(0)" class="back-to-top fixed bottom-8 right-8 left-auto z-[999] hidden h-10 w-10 items-center justify-center rounded-md bg-primary text-white shadow-md transition duration-300 ease-in-out hover:bg-dark">
    <span class="mt-[6px] h-3 w-3 rotate-45 border-t border-l border-white"></span>
  </a>
  <!-- ====== Back To Top End -->

  <!-- ====== All Scripts -->
  <script src="/js/main.js"></script>
</body>

</html>